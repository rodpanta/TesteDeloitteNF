@model DeloitteNF.Models.NotasFiscais

@{
    ViewBag.Title = "Nota Fiscal";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <!-- INLINE FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Nova Nota Fiscal</h4>
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <li>Cliente</li>
                        <div class="col-md-10">
                            @Html.DropDownList("clientid", new SelectList(ViewBag.Clientes, "Cliente_id", "Nome"),  htmlAttributes : new { @class = "form-control" } )
                        </div>
                    </div>
                    <button type="submit" class="btn btn-theme">Criar</button>
                </form>
            </div>
            <!-- /form-panel -->
        </div>
        <!-- /col-lg-12 -->
    </div>
    <!-- /row -->
    <!-- INPUT MESSAGES -->


</div>
}

