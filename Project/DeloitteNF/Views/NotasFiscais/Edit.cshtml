@model DeloitteNF.Models.stp_InvoiceID_Result

@{
    ViewBag.Title = "Edit";
}



<section class="wrapper">
    <div class="col-lg-12 mt">
        <div class="row content-panel">
            <div class="col-lg-10 col-lg-offset-1">

                <div class="row mt">
                    <div class="col-md-12">
                        <section class="task-panel tasks-widget">
                            <div class="panel-heading">
                                <div class="pull-left">
                                    <h5><i class="fa fa-tasks"></i>Confirmação de emissão</h5>
                                </div>
                                <br>
                            </div>
                            <div class="panel-body">
                                <div class="task-content">

                                </div>
                                <div class=" add-task-row">
                                    @Html.ActionLink("Emitir", "EditEmissao", new { id = @Html.DisplayFor(model => model.NotaFiscal_id) }, htmlAttributes: new { @class = "btn btn-theme btn-sm pull-left" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>

                <div class="invoice-body">
                    <div class="pull-left">
                        <h1>DELOITTE</h1>
                        <address>
                            <strong>Golden Tower - Av. Dr. Chucri Zaidan, 1240 - 4º /12º Andar</strong><br>
                            Chácara Santo Antônio (Zona Sul), São Paulo - SP<br>
                            04709-111<br>
                        </address>
                    </div>
                    <!-- /pull-left -->
                    <div class="pull-right">
                        <h2>Nota Fiscal: @Html.DisplayFor(model => model.NotaFiscal_id)</h2>
                    </div>
                    <!-- /pull-right -->
                    <div class="clearfix"></div>
                    <br>
                    <br>
                    <br>
                    <div class="row">
                        <div class="col-md-9">
                            <h4>@Html.DisplayFor(model => model.Nome)</h4>
                        </div>
                        <!-- /col-md-9 -->
                        <div class="col-md-3">
                            <br>
                            <div>
                                <!-- /col-md-3 -->
                                <div class="pull-left"> Data : </div>
                                <div class="pull-right"> @Html.DisplayFor(model => model.Data) </div>
                                <div class="clearfix"></div>
                            </div>
                            <!-- /row -->
                            <br>
                        </div>
                        <!-- /invoice-body -->
                    </div>
                    <!-- /col-lg-10 -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width:260px" class="text-left">Produto</th>
                                <th class="text-left">Unidade</th>
                                <th style="width:140px" class="text-left">Quantidade</th>
                                <th style="width:90px" class="text-left">Total</th>
                                
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var itensnf in ViewBag.Itens)
                            {
                            <tr>
                                <td>@itensnf.Nome</td>
                                <td>@itensnf.Unidade</td>
                                <td>@itensnf.Quantidade</td>
                                <td>@string.Format("{0:C}", itensnf.Total)</td>

                            </tr>
                            }
                            <tr>
                                <td colspan="2" rowspan="4">
                                <td class="text-right"><strong></strong></td>
                                <td class="text-right"></td>
                            </tr>
                            <tr>
                                <td class="text-right no-border">
                                    <div class="well well-small green"><strong>Total</strong></div>
                                </td>
                                <td class="text-right"><strong> @string.Format("{0:C}", @ViewBag.TotalNF)</strong></td>
                            </tr>
                        </tbody>
                    </table>
                    <br>
                    <br>
                </div>
                <!--/col-lg-12 mt -->
</section>