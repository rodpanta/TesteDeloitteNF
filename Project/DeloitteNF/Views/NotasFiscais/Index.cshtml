@model IEnumerable<DeloitteNF.Models.stp_InvoiceList_Result>

@{
    ViewBag.Title = "Index";
}


<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">

            <div class="row mt">
                <div class="col-md-12">
                    <section class="task-panel tasks-widget">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <h5><i class="fa fa-tasks"></i>  Notas Fiscais</h5>
                            </div>
                            <br>
                        </div>
                        <div class="panel-body">
                            <div class="task-content">

                            </div>
                            <div class=" add-task-row">
                                @Html.ActionLink("Novo", "Create", null, htmlAttributes: new { @class = "btn btn-theme btn-sm pull-left" })
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <table class="table table-striped table-advance table-hover">
                <br />
                <thead>
                    <tr>
                        <th class="hidden-phone">
                            @Html.DisplayNameFor(model => model.NotaFiscal_id)
                        </th>
                        <th class="hidden-phone">
                            @Html.DisplayNameFor(model => model.Data)
                        </th>
                        <th class="hidden-phone">
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th class="hidden-phone">
                            @Html.DisplayNameFor(model => model.TotalNota)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a>@Html.DisplayFor(modelItem => item.NotaFiscal_id)</a></td>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.Data)</a></td>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.Nome)</a></td>
                            <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.TotalNota)</a></td>

                            <td>
                                @if (item.Emitida == null || !item.Emitida.Value)
                                {
                                    @Html.ActionLink("Editar", "CreateItem", new { id = item.NotaFiscal_id }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("Excluir", "Delete", new { id = item.NotaFiscal_id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                                }
                                else
                                {

                                    @Html.ActionLink("Detalhe", "Details", new { id = item.NotaFiscal_id }, htmlAttributes: new { @class = "btn btn-success  btn-xs" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>


