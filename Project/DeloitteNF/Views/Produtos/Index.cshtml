@model IEnumerable<DeloitteNF.Models.stp_ProductsList_Result>

@{
    ViewBag.Title = "Index";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">

            <div class="row mt">
                <div class="col-md-12">
                    <section class="task-panel tasks-widget">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <h5><i class="fa fa-tasks"></i>  Produtos</h5>
                            </div>
                            <br>
                        </div>
                        <div class="panel-body">
                            <div class="task-content">

                            </div>
                            <div class=" add-task-row">
                                @Html.ActionLink("Novo", "Create", null, htmlAttributes: new { @class = "btn btn-theme btn-sm pull-left" })
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <table class="table table-striped table-advance table-hover">
                <br />
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i>Código</th>
                        <th>
                            Produto
                        </th>
                        <th>
                            Fornecedor
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Unidade)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="basic_table.html#">@Html.DisplayFor(modelItem => item.Produto_id)</a>
                            </td>
                            <td class="hidden-phone">@Html.DisplayFor(modelItem => item.nomeprod)</td>
                            <td class="hidden-phone">@Html.DisplayFor(modelItem => item.nomefornec)</td>
                            <td class="hidden-phone">@Html.DisplayFor(modelItem => item.Unidade)</td>
                            <td>
                                @Html.ActionLink("Detalhe", "Details", new { id = item.Produto_id }, htmlAttributes: new { @class = "btn btn-success  btn-xs" })
                                @Html.ActionLink("Editar", "Edit", new { id = item.Produto_id }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                                @Html.ActionLink("Excluir", "Delete", new { id = item.Produto_id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>


